<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <Button 
        android:text="Button" 
        android:id="@+id/criterion_remove" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
    ></Button>
    <Spinner 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:id="@+id/criterion_field" 
        android:layout_toRightOf="@id/criterion_remove"
    ></Spinner>
    <Spinner 
        android:id="@+id/criterion_operand" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/criterion_field"
    ></Spinner>
    <EditText
        android:layout_width="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@id/criterion_field" 
        android:layout_below="@id/criterion_field"
        android:id="@+id/criterion_value" 
        android:layout_height="wrap_content"
    ></EditText>
</RelativeLayout>
